[Unit]
Description=HiDRA for %i
Wants=network-online.target
After=network-online.target

[Service]
TimeoutStartSec=0
WorkingDirectory=/opt/hidra
EnvironmentFile=/opt/hidra/conf/datamanager_%i.conf
ExecStart=/bin/sh -c 'exec /usr/bin/sudo -u $username /opt/hidra/src/sender/datamanager.py --verbose --config_file /opt/hidra/conf/datamanager_%i.conf'

[Install]
WantedBy=multi-user.target
